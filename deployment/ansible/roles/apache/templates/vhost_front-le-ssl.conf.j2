<IfModule mod_ssl.c>
<VirtualHost *:443>
	ServerName {{ front_server_name }}
	DocumentRoot "{{ app_directory }}/frontend/dist"

	<Directory /var/www/{{ app_directory }}/frontend/dist/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride all
		Require all granted
		Order allow,deny
		allow from all

		RewriteEngine on
		RewriteBase /
		RewriteRule ^index\.html$ - [L]
		RewriteCond %{REQUEST_FILENAME} !-f
		RewriteCond %{REQUEST_FILENAME} !-d
		RewriteRule . /index.html [L]
	</Directory>

	FallbackResource /index.html

	ErrorLog "{{ app_directory }}/frontend/log/apache_error.log"
	CustomLog "{{ app_directory }}/frontend/log/apache_access.log" combined

	SSLCertificateFile /etc/letsencrypt/live/{{ front_server_name }}/fullchain.pem
	SSLCertificateKeyFile /etc/letsencrypt/live/{{ front_server_name }}/privkey.pem
	Include /etc/letsencrypt/options-ssl-apache.conf
</VirtualHost>
</IfModule>
