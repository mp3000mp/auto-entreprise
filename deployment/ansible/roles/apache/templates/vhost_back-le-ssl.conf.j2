<IfModule mod_ssl.c>
<VirtualHost *:443>
	ServerName {{ back_server_name }}

	ProxyPreserveHost On
	ProxyPass / http://localhost:{{ back_proxy_port }}/
	ProxyPassReverse / http://localhost:{{ back_proxy_port }}/
	ProxyPassReverseCookieDomain localhost {{ back_server_name }}

	SSLCertificateFile /etc/letsencrypt/live/{{ back_server_name }}/fullchain.pem
	SSLCertificateKeyFile /etc/letsencrypt/live/{{ back_server_name }}/privkey.pem
	Include /etc/letsencrypt/options-ssl-apache.conf
</VirtualHost>
</IfModule>
