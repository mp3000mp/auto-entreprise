{% extends 'layout/logged.html.twig' %}

{% block body %}
    <h1>{{ 'security.my_account'|trans }}</h1>

    <h2>{{ 'entity.User.general_info'|trans }}</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary" type="submit">{{ 'form.edit'|trans }}</button>
    {{ form_end(form) }}

    <h2 class="mt-3">{{ 'security.otp.label'|trans }}</h2>
    <a class="btn btn-primary" data-toggle="collapse" href="#qrcode">{{ 'security.otp.get_qr_code'|trans }}</a>
    <div class="collapse" id="qrcode">
        <img src="{{ qr_code_path(otpUrl) }}" />
    </div>

{% endblock %}
